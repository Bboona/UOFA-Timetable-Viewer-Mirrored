<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Class name</th>
      <th>Class code</th>
      <th>Colour</th>
      <th>Description</th>
      <th>Weeks</th>
      <th>Days</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.class_name %></td>
        <td><%= activity.class_code %></td>
        <td><%= activity.colour %></td>
        <td><%= activity.description %></td>
        <td><%= activity.weeks %></td>
        <td><%= activity.days %></td>
        <td><%= activity.hours %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

