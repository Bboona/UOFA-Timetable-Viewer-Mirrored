<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :class_name %>
    <%= form.text_area :class_name %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_area :subject %>
  </div>

  <div class="field">
    <%= form.label :class_code %>
    <%= form.text_area :class_code %>
  </div>

  <div class="field">
    <%= form.label :class_nbr %>
    <%= form.text_area :class_nbr %>
  </div>

  <div class="field">
    <%= form.label :class_type %>
    <%= form.text_area :class_type %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.text_area :size %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.text_area :available %>
  </div>

  <div class="field">
    <%= form.label :colour %>
    <%= form.text_area :colour %>
  </div>

  <div class="field">
    <%= form.label :term %>
    <%= form.select :term, ["S1", "S2"] %>
  </div>

  <div class="field">
    <%= form.label :weeks %>
    <%= form.collection_check_boxes :weeks, Weekly.all, :id, :id %>

  </div>

  <div class="field">
    <%= form.label :days %>
    <%= form.collection_check_boxes :weeks, @days, :itself, :itself %>
  </div>

  <div class="field">
    <%= form.label :hours %>
    <span>From:</span> <input type="time" id="start_time" name="start_time"
                              min="09:00" max="18:00" required>
    <span>To: </span>  <input type="time" id="end_time" name="end_time"
                              min="09:00" max="18:00" required>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_area :location %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
